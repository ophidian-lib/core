{
    "compilerOptions": {
        "target": "es2018",
        "module": "ESNext",
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "newLine": "lf",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": false,
        "lib": ["ES2018", "DOM"],
    },
    // Keep VSCode, tsc, typedoc, tsup, etc. from treating any output .ts files
    // as part of their input:
    "exclude": ["dist/*"]
}
